# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# =============================================================================
# MORNING BRIEFING INTEGRATIONS
# =============================================================================

# Google Calendar OAuth Configuration
# Uses the same OAuth client as Gmail - just needs calendar scopes enabled
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALENDAR_REDIRECT_URI=http://localhost:3000/api/calendar/callback

# GitHub Activity Monitoring
# Repos are configured in config/github-projects.json
# Tokens referenced by each repo's "tokenEnv" field:
GITHUB_PAT_PERSONAL=your_github_personal_access_token
GITHUB_PAT_FRACTAL=your_fractal_labs_pat
GITHUB_USERNAME=your_github_username

# GitHub Integration - Context Brief Sync (existing functionality)
GITHUB_REPO_OWNER=mattlim-fl
GITHUB_REPO_NAME=personal-os
GITHUB_BRANCH=main

# Notion Integration
# Create an internal integration at https://www.notion.so/my-integrations
NOTION_API_KEY=your_notion_internal_integration_token
# ID of the page containing your goals/tasks (works with page blocks)
# Find it in the URL: notion.so/workspace/PAGE_ID or notion.so/PAGE_ID
NOTION_PAGE_ID=your_notion_page_id

# Todoist Integration
# Get your API token from Todoist Settings > Integrations > Developer
TODOIST_API_TOKEN=your_todoist_api_token

# =============================================================================
# GMAIL INTEGRATION (Inbox Triage)
# =============================================================================

# Gmail OAuth Configuration
GOOGLE_REDIRECT_URI=http://localhost:3000/api/gmail/callback
